{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"plugin:react/recommended",
		"prettier",
		"plugin:prettier/recommended",
		"next/core-web-vitals"
	],
	"plugins": [
		"only-warn"
	],
	"rules": {
		"arrow-body-style": "off",
		"prefer-arrow-callback": "off",
		"max-len": [
			1,
			{
				"code": 150,
				"tabWidth": 3
			}
		],
		"jsx-quotes": [
			1,
			"prefer-single"
		],
		"react/jsx-first-prop-new-line": [
			1,
			"multiline"
		],
		"react/jsx-max-props-per-line": [
			1,
			{
				"maximum": 4,
				"when": "always"
			}
		]
	}
}